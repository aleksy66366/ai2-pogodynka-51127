{% extends 'base.html.twig' %}


{# @var location \App\Entity\Location #}
{# @var weather \App\Entity\Weather #}


{% block title %}Weather in {{ location.city }}, {{ location.province }}, {{ location.country }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <main>
        <h1>Weather in {{ location.city }}, {{ location.province }}, {{ location.country }}</h1>

        <ul>
            {% for measurement in measurements %}
                <li>
                    {{ measurement.date|date('d.m.Y') }}:
                    <ul>
                        <li>Temperature: {{ measurement.celsius }}&deg;C</li>
                        <li>Rain: {{ measurement.rain }}%</li>
                        <li>Cloud: {{ measurement.cloud }}</li>
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </main>

{% endblock %}
